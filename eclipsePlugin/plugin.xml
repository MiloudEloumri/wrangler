         point="org.eclipse.ui.editorActions">
      <editorContribution
            id="org.erlide.wranglerrefactoring.erlideContributor"
            targetID="org.erlide.ui.editors.erl.ErlangEditor">
         <menu
               id="org.eclipse.jdt.ui.refactoring.menu"
               label="%RefactoringMenu_Label">
            <groupMarker
                  name="renameGroup">
            </groupMarker>
         </menu>
         <action
               class="org.erlide.wranglerrefactoring.core.renamevariable.RenameVariableAction"
               id="org.erlide.wranglerrefactoring.renamevariable"
               label="%renameVariableName"
               menubarPath="org.eclipse.jdt.ui.refactoring.menu/renameGroup">
         </action>
         <action
               class="org.erlide.wranglerrefactoring.core.renamefunction.RenameFunctionAction"
               id="org.erlide.wranglerrefactoring.renamefunction"
               label="%renameFunctionName"
